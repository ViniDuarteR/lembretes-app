generator client {
      provider = "prisma-client-js"
    }

    datasource db {
      provider = "sqlite"
      url      = env("DATABASE_URL")
    }

    model Consulta {
  id            String   @id @default(cuid())
  paciente      String
  especialidade String
  medico        String
  data          DateTime
  endereco      String
  compareceu    Boolean?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

    model Medicamento {
      id            String   @id @default(cuid())
      nome          String
      dosagem       String   // Ex: "1 comprimido de 500mg"
      frequencia    String   // Ex: "A cada 8 horas"
      horarioInicio DateTime
      dataFinal     DateTime? // O '?' torna o campo opcional
      createdAt     DateTime @default(now())
      updatedAt     DateTime @updatedAt
    }