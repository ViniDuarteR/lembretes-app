generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NOVO MODELO: User
model User {
  id        String    @id @default(cuid())
  email     String    @unique 
  password  String    
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  consultas    Consulta[]
  medicamentos Medicamento[]
}

model Consulta {
  id            String    @id @default(cuid())
  paciente      String
  especialidade String
  medico        String
  data          DateTime
  endereco      String
  compareceu    Boolean?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId        String 
  user   User   @relation(fields: [userId], references: [id])
}

model Medicamento {
  id            String    @id @default(cuid())
  nome          String
  dosagem       String
  frequencia    String
  horarioInicio DateTime
  dataFinal     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String 
  user   User   @relation(fields: [userId], references: [id])
}